%header.user-header
  %h1
    = link_to "i am...", root_path, class: "title-logo"
    = fa_icon "paw", class: "bland-icon"
.main
  .inner
    %h1.inner__title ログイン
    .inner__menu
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "button-default btn-sns btn-sns-google" do
        Googleでログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name),html:{class: "form-content"}) do |f|
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "current-password"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "Log in"
        = render "devise/shared/links"
%footer.user-footer
